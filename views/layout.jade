doctype html
html
  head
    title Korpus
    link(rel='stylesheet', href='/stylesheets/style.css')

    script(src="//cdnjs.cloudflare.com/ajax/libs/lodash.js/3.9.3/lodash.js")
    script(src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js")
    script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js")
    script(src="//d3js.org/d3.v3.min.js")
    script(src="/javascripts/vendor/angucomplete-alt.min.js")
  body(ng-app="korpus")
    .content
      aside
        header
          h1 Korpus v. 1
        nav
          ol
            block sidebar
            li.collapse(class=activeTab === 'concordance' ? 'active' : ''): a(href="/search/concordance") Konkordancja
            li.collapse(class=activeTab === 'collocation' ? 'active' : ''): a(href="/search/collocation") Kolokacja
            li.collapse(class=activeTab === 'attendance' ? 'active' : ''): a(href="/search/attendance") Lista frekwencyjna
            li.collapse(class=activeTab === 'help' ? 'active' : ''): a(href="/help") Pomoc

      main.ng-cloak
        block content




   script(src="/javascripts/main.js")
