extends ../layout

block sidebar
  - var activeTab = 'collocation'

block content
  .collocation(ng-controller="collocation")
    //- h1 Konkordancja {{ tags.length }}

    form(action="")
      //- label(for="nmns") NMNS:
      //- select(name="nmns" ng-model="query.nmns")
      //-   each n in nmnsList
      //-     option(value="#{n.type}")= n.type

      label(for="glosa") Glosa:
      select(name="glosa" ng-model="query.glosaId")
        each g in glosaList
          option(value="#{g.id}")= g.name

      label(for="distance") Odległość:
      select(name="distance" ng-model="query.distance")
